<h3>Create Tournament</h3>

{{#if errors}}
  <div class='alert'>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Warning!</strong> Following errors prevent this tournament for being created:
    <ul>
      {{#each error in errorsList}}
        <li>
          {{error}}
        </li>
      {{/each}}
    </ul>
  </div>
 {{/if}}

<form class='tournament' {{action save on='submit'}}>
  {{view Graude.FileUploadView}}

  <fieldset class='span4'>
    {{input type='text' value=name placeholder='Tournament name' class='span4'}}
    {{view Graude.DatePickerView}}
    {{input type='number' value=players_limit placeholder='Max. players' class='span4'}}

    {{textarea rows='8' value=description placeholder='Description' class='span4'}}
  </fieldset>

  <div class='span4 geolocation'>
    {{view Graude.GeolocationView}}
  </div>

  <div class='span11'>
    <a href='#' {{action cancel}} class='btn'>Cancel</a>
    {{input type='submit' value='Create' class='btn btn-primary'}}
  </div>
</form>
