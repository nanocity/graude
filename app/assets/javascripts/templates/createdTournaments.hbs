<div class='box'>
  <div class='box-header'>
    <h3 class='box-title'>My tournaments ({{tournaments_count}})</h3>
    {{#link-to 'tournaments.new' class='btn btn-small btn-warning' }}
      <i class='icon-plus'></i>
      Create new
    {{/link-to}}
  </div>

  <div class='box-body'>
    <ul class='tournament-list'>
      {{#each}}
        {{#link-to 'tournament' this tagName='li' class='tournament-list-item'}}
          <span><i class='icon-trophy'></i></span>
          <a href='#'>
            <span>{{name}}</span>
          </a>
        {{/link-to}}
      {{else}}
        <li>
          <span><i>You have not created any tournament</i></span>
        </li>
      {{/each}}
    </ul>
  </div>
</div>
