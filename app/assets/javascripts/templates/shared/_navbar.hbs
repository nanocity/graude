<div class='navbar navbar-fixed-top'>
  <div class='navbar-inner'>
    <div class='container'>
      <button class='btn btn-navbar' data-target='.nav-collapse' data-toggle='collapse' type='button'>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
      </button>

      {{#link-to 'index' classNames=[brand]}}Graude{{/link-to}}

      {{#if currentSession.isLoggedIn}}
        <p class='navbar-text pull-right'>
          You are logged in as {{currentSession.email}}. <a href='#' {{action destroySession}}>Log out</a>
        </p>
      {{else}}
        <div class='nav-collapse collapse'>
          <p class='navbar-text pull-right'>
            Log in with:
            <a href='/api/v1/session/auth/github'><i class='icon-github-sign icon-2x'></i></a>
            <a href='/api/v1/session/auth/facebook'><i class='icon-facebook-sign icon-2x'></i></a>
          </p>
        </div>
      {{/if}}
    </div>
  </div>
</div>
